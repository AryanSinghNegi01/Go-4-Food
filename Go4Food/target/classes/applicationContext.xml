<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.1.xsd">
	<context:annotation-config />
	<context:component-scan base-package="com.go4food.dao" />
	
	<bean id = "dataSource" class = "org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName"
			value="oracle.jdbc.driver.OracleDriver" />
		<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
		<property name="username" value="hr" />
		<property name="password" value="hr" />
	</bean>

	<bean class="org.springframework.jdbc.core.JdbcTemplate"
		id="jdbcTemplate">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="CustomerDAO" class="com.go4food.dao.CustomerDAO">
		<property name="JdbcTemplate" ref="jdbcTemplate" />
	</bean>
	
	<bean id="OrderDAO" class="com.go4food.dao.OrderDAO">
		<property name="JdbcTemplate" ref="jdbcTemplate" />
	</bean>
	
	<bean id="DishDAO" class="com.go4food.dao.DishDAO">
		<property name="JdbcTemplate" ref="jdbcTemplate" />
	</bean>
	
	<bean id="BillDAO" class="com.go4food.dao.BillDAO">
		<property name="JdbcTemplate" ref="jdbcTemplate" />
	</bean>
</beans>
    